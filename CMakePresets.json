{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Default Config",
      "description": "Default build using Ninja generator",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "clang++"
      },
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-debug"
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "debug"
    },
    {
      "name": "rebuild",
      "inherits": ["default"],
      "cleanFirst": true
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "debug",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    }
  ],
  "workflowPresets": [
    {
      "name": "default",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "default"
        },
        {
          "type": "test",
          "name": "default"
        }
      ]
    },
    {
      "name": "rebuild",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "rebuild"
        },
        {
          "type": "test",
          "name": "default"
        }
      ]
    }
  ]
}
